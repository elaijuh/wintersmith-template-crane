doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700|Roboto:100,300,400|Source+Code+Pro:300,400')
      link(rel='stylesheet', href=contents.css['normalize.css'].url)
      link(rel='stylesheet', href=contents.css['skeleton.css'].url)
      link(rel='stylesheet', href=contents.css['app.css'].url)
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-57201547-1', 'auto');
        ga('send', 'pageview');
  body(class=bodyclass).container
    header.header
      div.content-wrap
        block header
          div.row
            div.avatar.three.columns
              img(src=contents.assets['avatar-mono.jpg'].url)
            div.author.nine.columns
              div.name
                h1= locals.owner
              div.status
                p= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to Jiale Hu's site
    footer
      div.content-wrap.row
        block footer
          //
            section.about
              !=contents['about.md'].html
          div.nav.six.columns
            ul.u-pull-left
              li
                a(href='/about/', alt='About') ABOUT
              li
                a(href='/', alt='Blog') BLOG 
          div.copy.six.columns
            p.u-pull-right &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design 