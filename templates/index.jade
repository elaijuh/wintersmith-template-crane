extends layout

block content
  // include author
  each article in articles
    article.article.intro.row
      header.two.columns
        h2
          a(href=article.url)= article.title
        p.date
          span= moment.utc(article.date).format('DD MMMM YYYY')
      section.content.ten.columns
        if article.intro.length > 0
          != typogr(article.intro).typogrify()
        if article.hasMore
          p.more
            a(href=article.url) [ read more ]
  div.index.nav.row
    div.nav.twelve.columns
      if prevPage
        div.u-pull-left
          a(href=prevPage.url, title='Newer') ← Newer
      //- else
        //- a(href='/archive.html') « Archives
      if nextPage
        div.u-pull-right
          a(href=nextPage.url, title='Older') Older →   
